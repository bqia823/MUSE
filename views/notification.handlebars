<link href="/css/notification.css" rel="stylesheet" />
<script src="/client/notification.js"></script>


<div class="container">
    {{#if toastMessage}}
    <p>{{toastMessage}}</p>
    {{/if}}

    <div class="pagebackground"></div>
    <div class="frame">

        <div class="panel"></div>
        <div class="panelbackground"></div>
        <div class="pagenumber">
            <div class="name1">◁</div>
            <div class="name2">1</div>
            <div class="name3">2</div>
            <div class="name4">3</div>
            <div class="name5">4</div>
            <div class="name6">5</div>
            <div class="name7">▷</div>
        </div>

        <div class="notificationpanel">
            {{#each notificationsList}}
            <div class="notificationtext1">
                <div class="textbackground"></div>
                <span class="text" id="{{this.Notification_ID}}">{{this.Content}}</span>
                <div class="headpicture"></div>
                <div class="deletebottom">
                    <div class="bottom"></div>
                    <a href="/delete-notification/{{this.Notification_ID}}"><span class="delete">Delete</span></a>
                </div>
            </div>
            {{/each}}

        </div>


    </div>

    <div class="ntbar">
        <div class="notificationbar"></div>
        <span class="notificationlist">Notification</span>
    </div>
