<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">

<body>
    <nav class="navbar">
        <div class="navbar_logo">
            <img src="./logopng.png" alt="Logo">
            <span>MUSE</span>
        </div>
        <ul class="navbar_functions">
            <li><a href=" "><span class="icon"></span>Home</a></li>
            <li><a href="/notifications"><span class="icon"></span>Notifications</a></li>
            <li><a href="/profile"><span class="icon">👤</span>My Profile</a></li>
            <li><a href="/logout"><span class="icon">🚪</span>Sign Out</a></li>
        </ul>
    </nav>

    <form class="container" action="/postArticle" method="POST" enctype="multipart/form-data">
        <div class="input_group">
            <div class="sub_group">
                <span class="title_hint">Title:</span>
            </div>
            <div class="sub_group">
                <input class="title_text" type="text" name="title" placeholder="Enter your title here">
            </div>
        </div>
        <div class="input_group">
            <div class="sub_group">
                <span class="content_hint">Content:</span>
            </div>
            <div class="sub_group" id="editor" class="content_text" name="content"></div>
        </div>
        <div class="input_group">
            <div class="sub_group">
                <div>
                    <span cliass="upload_hint">Upload an image here</span>
                </div>
                <br>
                <div>
                    <input id="inpFile" type="file" name="imageFile" accept=".png,.jpg,.jpeg,.bmp">
                </div>
            </div>
            <div>
                <button class="submit_button">Submit</button>
            </div>
        </div>
    </form>

    <script src="https://cdn.quilljs.com/1.3.6/quill.js">
    </script>
    <script>
        const toolbarOptions = [
            ['bold', 'italic', 'underline'],
            [{ 'list': 'ordered' }, { 'list': 'bullet' }],
            [{ 'header': 1 }, { 'header': 2 }]
        ];
        const quill = new Quill('#editor', {
            modules: {
                toolbar: toolbarOptions
            },
            theme: 'snow'
        });
        document.querySelector('form').addEventListener('submit', function () {
            const content = quill.root.innerHTML;
            document.querySelector('#editor').value = content;
        });
    </script>
