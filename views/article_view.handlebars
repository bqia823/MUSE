 <link rel="stylesheet" href="/css/article_view.css">
  <script src="/client/articleViewClient.js"></script>

    <nav class="navbar">
        <div class="navbar-logo">
            <img src="/images/logopng-after-trim.png" alt="Logo">
            <span>MUSE</span>
        </div>
    
        {{#unless user}}
        <div class="toastmessage">{{toastMessage}}</div>
        {{/unless}}
        <div class="navbar-functions">
            <ul>
                
                <li><a href="/"><span class="icon">🏠</span>Home</a></li>
                {{#unless user}}
                <li>
                    <a href="/sign_in_page"><span class="icon"><img src="/images/login-box-line.png" id="sign_in_icon"></span>Sign in</a>
                </li>
                {{/unless}}
                {{#if user}}
                <li><a href="/notifications"><span class="icon">🔔</span>Notifications</a></li>
                <li><a href="/profile"><span class="icon">👤</span>My Profile</a></li> 
                <li><a href="/createArticle"><span class="icon"><img src="/images/article-line.png" id="create_article_icon"></span>Create article</a></li> 
                <li><a href="/logout"><span class="icon">🚪</span>Sign Out</a></li>
                {{/if}}
            </ul>
        </div>
    </nav>
<div id="container">
    <div id="articlepanel">
        <div class="banner">
            <div id="paneltitle">{{article.Title}}</div>
        </div>
        <div id="article">
            <div class="authorinfo">
                <div class="articledetail">
                    <img src="/images/{{authorAvatar.Avatar}}" class="avatar">
                    <a href="/authorpage" class="authorname">{{author.Username}}</a>
                    <span class="publishtime">Published on: {{article.Date}}</span>
                </div>
                <div id="likediv">
        
                    <a href="/like?Article_ID={{article.Article_ID}}" title="Like this article!"><img src="{{likeIcon}}" class="heart"></a>
                    
                <span id="likenumber">{{article.Likes_Count}}</span>
                </div>
            </div>
            <div id="articletext">
            {{article.Content}}
            </div>
                {{#if isAuthor}}
                <p></p>
                {{/if}}
               
            </div>   
    </div>
    <div id="commentpanel">
        <div class="banner">
            <div id="commenttitle">Comments</div>
        </div>
        <div id="numberofcomments">{{commentCount.[COUNT(*)]}}&nbsp;&nbsp;&nbsp;Comments</div>
        {{#each commentArray}}
         <div class="comment" id="{{this.User_ID}}">
            <div class="commentorinfo">
                <img src="/images/{{this.childAvatar.Avatar}}" class="avatar">
                <a href="/authorpage" class="commentorname">{{this.childUsername.Username}}</a>
                    <div class="commenttimestamp">Published on: {{this.Comment_Time}}</div>
            </div>
            <div class="commenttext">
                {{this.Comment_Text}}
            </div>
          {{#if ../user}}
            <div class="reply-remove-div">
                <div class="replydiv">
                    <img src="/images/comment.png" class="replyicon">
                    <span class="reply">Reply</span>
                
                </div>
                {{#ifCond this.User_ID ../user.User_ID}}
                <div class="removediv">
                {{!-- <img src="/images/deleteaccount.png" class="removeicon">
                <a href="/remove" class="remove">Remove</a> --}}
                </div>
                {{/ifCond}}
              
            </div>
          {{/if}}
           {{!--一个父级评论的子评论区，这里可能会用到另一个#each循环，每一个循环的div的id是父评论ID-子评论ID--}}
            <div class="subreply" id="{{this.Parent_Comment_ID}}-{{this.User_ID}}">
                <img src="/images/boy1.png" class="childavatar">
                <a href="/authorpage" class="childcommentname">UserName</a>
                <div class="childcommenttime">Published on: 2013.08.26</div>
                <div class="childcommenttext">
                    comment text................
                </div>
                {{#if ../user}}
                <div class="sub-reply-remove-div">
                    <div class="sub-replydiv">
                        <img src="/images/comment.png" class="sub-replyicon">
                        <span class="sub-reply">Reply</span>
                    
                    </div>
                    {{#ifCond this.User_ID ../user.User_ID}}
                    <div class="sub-removediv">
                        {{!-- <img src="/images/deleteaccount.png" class="sub-removeicon">
                        <a href="/remove" class="sub-remove">Remove</a> --}}
                    </div>
                    {{/ifCond}}
                </div>
                {{/if}}
            </div>

            <div class="reply-text-div">

            </div>
        </div>
        {{/each}}
        
     
        <div id="comment-textarea-div">
            <form action="/writecomment?Article_ID={{article.Article_ID}}" method="POST">
                <div class="textarea-div">
                    <textarea rows="4" cols="50" name="comment" class="comment-textarea" placeholder="please leave your comment"></textarea>
                </div>
                <div id="writecomment-button">
                    <button type="submit" id="writecomment">Send</button>
                </div>
            </form>
        </div>

         
    </div>
    
    </div>
   
</div>